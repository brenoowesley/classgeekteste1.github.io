<!DOCTYPE html>
<html>
  <head>
    <title>ClassGeek</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
     <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <%= link_to "ClassGeek", root_path, class:"navbar-brand" %>
        <ul class="navbar-nav">
          <li class="nav-item active"> <%= link_to "Classes", turmas_path, class:"nav-link" %>  </li>
          <li class="nav-item active"> <%= link_to "Tweets", tweets_path, class:"nav-link" %>  </li>
          
            <% if !user_signed_in? %> 
                <li class="nav-item active"> <%= link_to "Register", new_user_registration_path, class:"nav-link" %>   </li>

                <li class="nav-item active"> <%= link_to "Login", new_user_session_path, class:"nav-link" %>   </li>
            <% else %>
                <li class="nav-item active"> <%= link_to "Sign out", destroy_user_session_path, method: :delete, class:"nav-link" %>   </li>
            <% end %>

        </ul>
          
        
    </div>      
    </nav>
      
    <% flash.each do |name, message| %>
      <%= content_tag(:div, message, class:"alert alert-info #{name}") %>
    <% end %>  
      
      
    <div class="container"> <%= yield %> </div>   
     
  </body>
</html>
